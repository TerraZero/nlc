{
  "services": {
    "nlc.core": {
      "synthetic": true
    },
    "nlc.require": {
      "synthetic": true
    },
    "nlc.logger": {
      "synthetic": true
    }
  },
  "databases": {
    "default": {
      "target": {
        "client": "sqlite3",
        "connection": {
          "filename": "./databases/default.sqlite3"
        },
        "useNullAsDefault": true
      },
      "storage": "nlc.sql.storage",
      "models": "*"
    }
  },
  "logger": {
    "level": "all",
    "appender": [
      {
        "type": "rollingfile",
        "errorEventName": "error",
        "logDirectory": "./logs",
        "fileNamePattern": "<DATE>.log",
        "dateFormat": "YYYY.MM.DD",
        "level": "all",
        "prettyPrint": true
      }
    ]
  },
  "extensions": [
    "nlc-util",
    "nlc-cli",
    "nlc-sql",
    "nlc-serve"
  ]
}
