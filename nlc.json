{
  "services": {
    "nlc.core": {
      "synthetic": true
    },
    "nlc.require": {
      "synthetic": true
    },
    "nlc.logger": {
      "synthetic": true
    },
    "nlc.command.core": {
      "class": "src/commands/CoreCommand",
      "tags": [
        {
          "name": "command"
        }
      ]
    }
  },
  "logger": {
    "level": "all",
    "appender": [
      {
        "type": "rollingfile",
        "errorEventName": "error",
        "logDirectory": "./logs",
        "fileNamePattern": "<DATE>.log",
        "dateFormat": "YYYY.MM.DD",
        "level": "all",
        "prettyPrint": true
      }
    ]
  },
  "commands": "commands/**/*.js",
  "extensions": [
    "nlc-util"
  ]
}
